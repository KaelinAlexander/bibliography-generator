<% @style = [["MLA", "MLA"], ["Chicago", "Chicago"], ["APA", "APA"]] %>
<%= form_for @bibliography, url: { action: "style" }  do |f| %>
<br>
<%= f.label 'Current Style' %>
<%= f.select(:style, options_for_select(@style)) %>
<br>
<%= f.hidden_field :name %>
<%= f.hidden_field :use %>
<%= f.hidden_field :id %>
<%= f.submit "Change Style" %>
<% end %>